# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=your_channel_id_here
# Optional: Backup channels for redundancy (comma-separated)
# TELEGRAM_BACKUP_CHANNELS=

# Server Configuration
PORT=3000
UPLOAD_DIR=./uploads
HLS_DIR=./hls
TEMP_DIR=./temp

# FFmpeg Configuration
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Upload Settings
MAX_FILE_SIZE=2147483648
MAX_CONCURRENT_UPLOADS=3

# Storage Settings
# Set to false to disable thumbnail generation (recommended if FFmpeg issues occur)
ENABLE_THUMBNAILS=true
ENABLE_PREVIEW=true
THUMBNAIL_COUNT=5
PREVIEW_DURATION=10
